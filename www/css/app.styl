@import 'mixins/malarkey'
@import 'mixins/nib'
@import 'mixins/normalize'

global-normalize()

@import 'variables'
@import 'fonts'	

*
	font-family 'BariolBold', Helvetica, Arial, sans-serif
	box-sizing border-box

body
	font-size $base-font-size
	line-height 1.25em  // 20 px
	background url('../img/bg.jpg') #efefef repeat

@import 'typography' //h1 to h6, hyperlinks, lists

@import 'layout' //main, wrapper
@import 'header'
@import 'footer'
@import 'columnleft'
@import 'columnright'

#fb-root
	display none

input
	border 1px solid #333

section.popup
	width 200px
	z-index 5
	position absolute
	top 40px
	background-color grey
	display none

#popup-notifications
	left 680px

#popup-messages
	left 680px

#popup-dates
	left 680px

div.user-preview
	float left
	width 328px

div.user-preview img
	float left
	margin-bottom 20px

div.small, div.medium
	img
		width 104px
		height 104px

div.tiny, ul.tiny
	img
		float left
		width 60px
		height 60px

div.tiny p
	float left
	width 196px

div.match-preview
	width 328px
	float left

	a
		display inline-block