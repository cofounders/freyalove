*
	font-family Bariol, Helvetica, Arial, sans-serif
	box-sizing border-box
	font-weight 400
	
html
	font-size $base-font-size

body
	line-height 1.25  // 20 px
	background url('../img/bg.jpg') #efefef repeat

ul, ol 
	padding 0

.wrapper
	position relative
	width $page-width
	margin 0 auto

.main
	clear both
	font-size 0
	margin-top 35px

hr
	display block
	outline 0
	height 1px
	background-color #e1e1e1
	border none
	box-shadow white 0px 1px 0px 0px

#fb-root
	display none

input
	border 1px solid #333

section.popup
	width 200px
	z-index 5
	position absolute
	top 40px
	background-color grey
	display none

#popup-notifications
	left 680px

#popup-messages
	left 680px

#popup-dates
	left 680px



div.match-preview
	width 328px
	float left

	a
		display inline-block
