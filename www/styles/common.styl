*
	font-family Bariol, Helvetica, Arial, sans-serif
	box-sizing border-box
	font-weight 400

body
	background url('../img/bg.jpg') #efefef repeat

ul, ol 
	padding 0

.wrapper
	position relative
	width $page-width
	margin 0 auto

.main
	clear both
	font-size 0
	margin-top 35px

hr
	display block
	outline 0
	height 1px
	background-color #e1e1e1
	border none
	box-shadow white 0px 1px 0px 0px

#fb-root
	display none

input
	border 1px solid #333

.column-left
	display inline-block
	vertical-align top
	width $content-width
	header h2
		font-weight 700
		text-align center
		display block

.bblm-sidebar-panels
	display inline-block
	margin-left 24px
	vertical-align top
	width $sidebar-width - @margin-left
