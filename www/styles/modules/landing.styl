section#landing
	min-height 700px
	#landing-header
		display block
		clear both
#fb-login
	background url('../img/fb_login.png') no-repeat 0 0
	width 231px
	height 28px
	display inline-block
	float right
	margin 20px 0 0 0
#landing-intro
	margin 20px 0 0 0
	background-color rgba(226, 227, 228, 0.3)
	border-radius 4px
	width 100%
	border 1px #d2d3d3 solid
	box-shadow 0 0 2px #bbb inset
	padding 4px
	video
		border 1px solid #aaa
		display inline-block
	#intro-text
		display inline-block
		vertical-align top
		width 500px
		margin 0 0 0 20px	
		h1
			text-transform uppercase
			font-weight 700
			margin 15px 0
		h4
			margin 0 0 15px 0
			color #444
		#call-to-action
			background url('../img/bg_btn_orange.jpg') repeat-x
			color white
			font-size 1.5rem
			font-weight 700
			display inline-block
			line-height 2em
			padding 0 25px
			border-radius 5px
			box-shadow 0 0 3px #BBB
			text-shadow 0 0 3px #666
#landing-details
	overflow hidden
	#landing-details-social 
		display block
		margin 20px 0
		li 
			padding 0
			margin 0 0 0 20px
			float right
			a 
				height 28px
				display inline-block
				box-shadow 0 0 3px #aaa
			&:nth-child(1)
				background url('../img/fb_like.png') no-repeat
				a 	
					width 140px
			&:nth-child(2)
				background url('../img/tw_like.png') no-repeat
				a 	
					width 160px
	#landing-details-text
		li 
			padding 0
			display inline-block
			width 310px
			vertical-align top
			h2
				font-weight 700
			&:nth-child(2n)
				margin 0 10px