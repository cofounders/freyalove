.layout.landing
	background-image url('../img/bg_landing.jpg')
	background-repeat no-repeat
	background-size cover
	min-height 100%

	.header-public
		h1
			background url('../img/logo_landing.png') no-repeat
			height 92px
			margin 10px 0 30px 0
			width 335px
		.button
			background-size auto 100%
			font-size 1.3rem
			height 40px
			left 560px
			right auto
			top 430px
			z-index 1

	article.splash
		background url('../img/bg_splash_overlay.png')
		box-shadow 0px 2px 5px 0px rgba(0, 0, 0, 0.3)
		overflow hidden
		padding 20px 40px 60px 40px
		width 100%
		h1
			font-size 3.75rem //60px
			font-weight 700
			margin 0 0 20px 0
			display block
			text-align center
		figure
			border 1px solid #aaa
			display inline-block
			float left
			font-size 0
			height 1.25 * 300px
			margin 0 20px 0 0
			width 1.25 * 400px
			> *:first-child
				background #000
				height 100%
				width 100%
		p
			font-size 2rem
		small
			display block
			font-size 0.875rem
			font-style italic
			margin-top 80px
			text-align center

	address
		padding 20px 0
		text-align right

	.footer-public
		background none
		box-shadow none
		padding 60px 0 40px 0
		.wrapper
			background url('../img/bg_splash_overlay.png')
			box-shadow 0px 2px 5px 0px rgba(0, 0, 0, 0.3)
			padding 20px
		menu
			margin 0 0 0 20px
			li
				color #444
				&:after
					color #444
		small
			color #444
			right 20px
		a
			color #444
