.conversations-menu
	popup()
	img
		profile-image()
	article ol
		padding 5px
		li
			padding 5px
			margin 0
			&:hover
				background-color lighten($purple, 95%)
			a
				display block
				width 100%
				height 100%
				.popup-conversation-profile-details
					display inline-block
					vertical-align top
					width 200px
					margin 0 0 0 10px
					p
						margin 0
						width 100%
						&:first-child
							font-weight bold
						&:nth-child(2)
							height 30px
							overflow hidden
							line-height 0.875rem
							text-overflow ellipsis
						&:nth-child(3)
							font-style italic
							font-size 0.75rem