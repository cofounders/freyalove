.popup-active
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	background rgba(0,0,0,0.4)
	z-index 10000

.conversations-create
	width 500px
	background #fff
	position relative
	margin 10% auto
	header
		height 50px
		border-bottom 1px solid #e7e7e7
		background linear-gradient(top, #fff, #eee)
		h2
			text-transform none
			text-align center
			display block
			color $brown
			line-height 3rem
	article
		padding 10px 15px
		.form-item
			margin 0 0 10px 0
			&:last-of-type
				margin 0
			textarea, input
				&:focus
					focus()
			textarea
				textarea()
				width 470px
			input
				input()
				width 400px
			label
				label()
	footer
		border-top 1px solid #ccc
		background-color #e5e5e5
		padding 5px 15px
		text-align right