.conversations-conversation
	header
		position: relative
		&:after
			sidebar-heading-underline()
		h2
			text-align: left
			text-transform: none
			display: inline-block
			margin: 0 0 10px 0
		a
			right: 0
			display: inline-block
			top: 0
			position: absolute
	article
		li
			margin: 20px 0 0 0
			font-size: 1rem
			list-style-type: none
			&.unread
				tray()
			.conversation-content
				display: inline-block
				width: 585px
				vertical-align: top
				p
					vertical-align: top
					margin: 0
					span.when
						font-style: italic
		img
			profile-image()
			display: inline-block
			margin: 0 10px 0 0
