.conversations-conversation
	header
		position relative
		&:after
			sidebar-heading-underline()
		h2
			text-align left
			text-transform none
			display inline-block
			margin 0 0 10px 0
		p
			margin 0
		a
			right 0
			display inline-block
			bottom 15px
			position absolute
	article
		position relative
		font-size 1rem
		ol
			margin 0 0 20px 0
			> a
				display block
				margin 0
				padding 0
				&:hover
					tray()
					padding 0
					border none
		li
			margin 0
			font-size 1rem
			list-style-type none
			padding 5px
			.conversation-content
				display inline-block
				width 550px
				vertical-align top
				p
					vertical-align top
					margin 0
					span
						&.name
							color $hyperlink
							font-weight bold
						&.when
							font-style italic
			span
				&.read, &.unread
					height 10px
					width 10px
					border-radius 50%
					display inline-block
					vertical-align top
					position relative
					top 20px
			&.unread span.unread
				background linear-gradient(top, lighten($hyperlink, 10%), darken($hyperlink, 10%))
				box-shadow 0 0 1px #444
			&.read span.read
				border solid 1px $hyperlink
		img
			profile-image()
			display inline-block
			margin 0 10px 0 0
		textarea
			textarea()
			width 595px
			margin 0 5px 0 0
			&:focus
				focus()
		.button
			border: none
