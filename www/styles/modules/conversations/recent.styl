.conversations-conversation
	header
		position relative
		&:after
			sidebar-heading-underline()
		h2
			text-align left
			text-transform none
			display inline-block
			margin 0 0 10px 0
		a
			right 0
			display inline-block
			top 0
			position absolute
	article
		position relative
		font-size 1rem
		ol
			margin 0 0 20px 0
			> a
				display block
				margin 0
				padding 0
				&:hover
					tray()
					padding 0
		li
			margin 0
			font-size 1rem
			list-style-type none
			padding 5px
			&.unread
				background-color lighten(red, 95%) //temp style for unread messages
			.conversation-content
				display inline-block
				width 550px
				vertical-align top
				p
					vertical-align top
					margin 0
					span
						&.name
							color $hyperlink
							font-weight bold
						&.when
							font-style italic
		img
			profile-image()
			display inline-block
			margin 0 10px 0 0
		textarea
			width 595px
			height 100px
			resize vertical
			border 1px solid #ccc
			outline none
			padding 10px
			border-radius 3px
			font 1rem Bariol, Helvetica, Arial, sans-serif
			color #444
			margin: 0 5px 0 0
		.button
			border: none
