.conversations-conversation
	header
		position relative
		&:after
			sidebar-heading-underline()
		h2
			text-align left
			text-transform none
			display inline-block
			margin 0 0 10px 0
		a
			right 0
			display inline-block
			top 0
			position absolute
	article
		position relative
		font-size 1rem
		ol
			margin 0 0 20px 0
			> a
				display block
				margin 0
				padding 0
				&:hover
					tray()
					padding 0
					border none
		li
			margin 0
			font-size 1rem
			list-style-type none
			padding 5px
			&.unread, &.read
				.conversation-content
					display inline-block
					width 550px
					vertical-align top
					p
						vertical-align top
						margin 0
						span
							&.name
								color $hyperlink
								font-weight bold
							&.when
								font-style italic
			&.unread .conversation-content:after
				content url("../img/unread.png")
				position absolute
				right 20px
				top 25px
			&.read .conversation-content:after
				content url("../img/read.png")
				position absolute
				right 20px
				top 25px
		img
			profile-image()
			display inline-block
			margin 0 10px 0 0
		textarea
			width 595px
			height 100px
			resize vertical
			border 1px solid #ccc
			outline none
			padding 10px
			border-radius 3px
			font 1rem Bariol, Helvetica, Arial, sans-serif
			color #444
			margin: 0 5px 0 0
		.button
			border: none
