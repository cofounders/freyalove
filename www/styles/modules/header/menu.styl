.header-menu
	width 100%
	background-color #62228f
	background url('../img/bg_header.jpg') $purple repeat-x
	font-weight 200
	height 50px
	text-align right

	h1
		display inline-block
		height 100%
		left 0
		overflow hidden
		position absolute
		width 143px
		a
			background url('../img/logo_modified.png') no-repeat center
			color transparent
			display inline-block
			height 100%
			width 100%

	nav
		font-size 0
		height 50px
		text-align right
		width 100%
		> *
			display inline-block
			vertical-align middle

		> menu
			height 46px
			margin 2px 0
			padding 0
			margin 0 20px 0 0
			> li
				border none
				border-radius 3px
				display inline-block
				font-size 1rem
				height 100%
				line-height 28px
				margin 0
				overflow hidden
				text-align center
				top 11px
				width 40px
				&:last-child
					margin-right 0px
				a
					background no-repeat center
					color transparent
					display inline-block
					height 100%
					width 100%
					&:hover
						background-color rgba(98, 34, 143, 0.5)
					&.notifications
						background-image url('../img/icn_global.png')
					&.conversations
						background-image url('../img/icn_messages.png')
					&.sexytimes
						background-image url('../img/icn_dates.png')

		> form
			input
				background url('../img/icn_search.png') #fff no-repeat 246px 7px
				border-radius 5px
				height 30px
				width 272px
				box-shadow inset 0px 0px 2px 2px rgba(0, 0, 0, 0.1)
				outline 0
				padding 5px
				font-size 0.8rem
				&:focus
					box-shadow lighten($purple, 70%) 0px 0px 5px

		> .name
			color #d0c0dd
			font-size 0.8rem
			min-width 233px
			line-height 50px
			padding 0 20px 0 0
			text-align right
			&:hover
				text-decoration underline
			&:after
				// background url('../img/ln.png') no-repeat right 0
				/* glow, shadow */
				box-shadow 1px 0px 0px 0px rgba(255, 255, 255, 0.15),
					2px 0px 0px 0px rgba(0, 0, 0, 0.1)
				content ' '
				display inline-block
				height 28px
				overflow hidden
				position absolute
				top 11px
				width 19px


		> .signout
			background url('../img/icn_power.png') no-repeat center
			color transparent
			font-size 1rem
			height 46px
			margin 2px 0
			width 40px
			&:hover
				background-color rgba(98, 34, 143, 0.5)
