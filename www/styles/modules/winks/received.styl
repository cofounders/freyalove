.winks-received > .carousel
	background-color rgba(0, 0, 0, 0.03)
	border-radius 3px
	box-shadow inset 0px 0px 1px 0px rgba(0, 0, 0, 0.3),
		0px 1px 3px 0px rgba(255, 255, 255, 0.7)
	height 210px
	margin 0 0 34px 0
	position relative
	width 654px

	> .previous,
	> .next
		height 100%
		overflow hidden
		position absolute
		text-indent -999em
		top 0
		width 40px
		&:after, &:before
			font-size 1.5em
			padding-top 60px
			position absolute
			text-indent 0
		&.disabled
			display none

	> .previous
		left -10px
		&:before
			content '<'
			left 21px

	> .next
		right -10px
		&:after
			content '>'
			right 21px

	// > .bookmarks

	> .viewport

		// > .empty

		> ol
			margin 21px 0 4px 0
			transition-duration .4s
			> li
				background-color (rgba(246, 246, 246, 0.69)/2 + #dadada/2)
				background-image linear-gradient(bottom, @background-color, (rgba(246, 246, 246, 0.69)/2 + white/2))
				box-shadow inset 0px 1px 0px 0px white,
					0px 1px 3px 0px rgba(0, 0, 0, 0.29)
				height 145px
				margin 1px 31px 1px 0
				position relative
				width 120px
				> a
					display inline-block
					height 100%
					width 100%
					> img
						height 100px
						margin 10px 10px 0 10px
						width 100px
					> h6
						color #9f3647
						display block
						font-weight bold
						height 2em
						line-height 1
						margin 3px 0 0 0
						overflow hidden
						padding 2px 6px 0 6px
						text-align center
						text-overflow ellipsis
						word-break normal
				&:nth-child(4n+1) // 1st, 5th, 9th, ...
					margin-left 41px
				&:nth-child(4n) // 4th, 8th, 12th, ...
					margin-right 40px
				&:hover
					box-shadow inset 0px 1px 0px 0px white,
						0px 2px 3px 0px rgba(0, 0, 0, 0.49)
					margin-top 0px
					margin-bottom 2px
				&:active
					margin-top 2px
					margin-bottom 0px
