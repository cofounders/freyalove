#column-left
	display inline-block
	font-size $base-font-size
	vertical-align top
	width $content-width

	#welcome-message
		width 416px
		float left

	#facebook-ad
		float left
		width 240px

		img
			float left
			width 60px
			height 60px

#column-right
	display inline-block
	font-size $base-font-size
	margin-left 24px
	vertical-align top
	width $sidebar-width - @margin-left
	> div
		margin-bottom 15px
	p, li
		font-size 0.875em //14px
		color #666
		margin 0
		display inline-block
	p.invite-more
		vertical-align top
		display inline-block
		margin 23px 0 0 8px
	a
		color #9f3647
		font-weight bold
		&:link, &:visited
			text-decoration none
		&:hover, &:active
			text-decoration underline
	ul.activity	
		padding 0
		margin 0
		li 
			margin 0 0 15px 10px
	.bblm-top-leaderboard ol
		padding 0
		margin 0
		list-style-position inside
		display 
		font-size $base-font-size
		color #b2b3b3
		font-weight 700
		counter-reset item 
		img
			height 54px
			width 54px
		li 
			display block
			font-size 2.25em
			margin 10px 0
			&:before
				content counter(item) " "
				counter-increment item
			img
				border 3px solid white
				box-shadow 1px 1px 4px #b3b3b3
				vertical-align middle
			.user-preview-points-info
				display inline-block
				a, p 
					font-size 14px
					display block	

	
.add-more
	background url('../img/add.png') no-repeat center center


ul.friends-list-dates
	padding 4px
	background-color #e2e3e4
	border-radius 4px
	width 100%
	border 1px #d2d3d3 solid 
	box-shadow 0 0 2px #fff inset 
	li 
		display inline-block
		width 60px
		height 60px
		border 3px solid white
		box-shadow 1px 1px 4px #b3b3b3
		margin-bottom 4px
		a 
			width 100%
			height 100%
			display inline-block
	img
		width 54px
		height 54px

