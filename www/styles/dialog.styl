.dialog
	background rgba(0,0,0,0.4)
	bottom 0
	left 0
	position fixed
	right 0
	top 0
	z-index 10000

	> section
		background #fff
		margin 10% auto
		position relative
		width 500px

		> header
			background linear-gradient(top, #fff, #eee)
			border-bottom 1px solid #e7e7e7
			height 50px
			h2
				color $brown
				display block
				line-height 3rem
				text-align center
				text-transform none

		> article
			padding 10px 15px
			.form-item
				margin 0 0 10px 0
				&:last-of-type
					margin 0
					width 100%
				textarea, input
					&:focus
						focus()
				textarea
					textarea()
					width 100%
				input
					input()
					width 400px
				label
					label()

		> footer
			background-color #e5e5e5
			border-top 1px solid #ccc
			padding 5px 15px
			text-align right
			p
				display inline-block
				float left
				font-size 0.875rem
				margin 0
				text-align left
				vertical-align top
				width 260px